<h1 class="mx-auto" style="width: 200px;"><%= @place["name"] %></h1>

<% if @current_user %>

  <h2>My Posts</h2>
  <div class="row">
    <% for post in @posts %>
    <div class="col-md-4">
      <h3><%= post["title"] %></h3>
      <h4><%= post["posted_on"] %></h4>
      <p><%= post["description"] %></p>
      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
        <img src="<%= post["image"] %>" class="img-fluid">
      <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<p>
</p>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
</p>

<p>
  <a href="/places" class="btn btn-secondary">Back to All Places</a>
</p>

